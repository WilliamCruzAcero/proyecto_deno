<%- await include('views/header.ejs') %>

    <body onload="load()">
        <%- await include('views/navbar.ejs') %>
        <div class="container mt-3">

            <div class="container text-center">
                <div class="row">
                    <div class="col-8 d-flex flex-column align-items-start">
                        <h1>Bienvenido <%=user.name%> <%=user.lastname%></h1>
                        <p style="font-size: 1.3em; font-style: italic;">
                            <%=user.email%>
                        </p>
                    </div>
                </div>
            </div>

            <div class="jumbotron">
                <h1 style="color:black mt-3;"></h1>
                <br />

                <div class="form-group">
                    <label for="nombre"><b>Nombre</b></label>
                    <input type="text" id="nombre" class="form-control" name="nombre" required>
                </div>

                <div class="form-group">
                    <label for="precio"><b>Precio</b></label>
                    <input type="number" id="precio" class="form-control" name="precio">
                </div>

                <div class="form-group">
                    <label for="imagen"><b>Imagen</b></label>
                    <input type="url" id="imagen" class="form-control" name="imagen">
                </div>

                <div class="form-group">
                    <label for="cantidad"><b>Cantidad</b></label>
                    <input type="number" id="cantidad" class="form-control" name="cantidad">
                </div>

                <button class="btn btn-success mt-3 mb-5" id="crear">Agregar Producto</button>

                <h2 style="color:blue;">Historial de productos</h2>
              
                <%- await include('views/tabla.ejs', {products}) %>    
                
               
            </div>
           
        </div>
        <script src="./javascript/set-navBar-token.js"></script>
        <script src="./javascript/crear-producto.js"></script>
        
    </body>

<%- await include('views/footer.ejs') %>